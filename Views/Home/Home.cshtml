@model PMS.Models.DashboardData
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Home"];
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<center>
    <p style="color:Black;font-size: 35px;">
        @Html.Raw(Localizer["PharmacyManagementSystem"].Value)
    </p>
</center>

<br />

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3 bg-dark text-white">
                    <h4 class="my-0 fw-normal">📦 @Localizer["Stocks"]</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Localizer["TotalStockItems"]</li>
                    </ul>
                    <h1 class="card-title pricing-card-title">@Model.StockCount</h1>
                    <a href="@Url.Action("Index", "Stock")" class="w-100 btn btn-lg btn-outline-dark">
                        @Localizer["Enter"]
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3 bg-success text-white">
                    <h4 class="my-0 fw-normal">💵 @Localizer["Sales"]</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Localizer["TotalSaleRecords"]</li>
                    </ul>
                    <h1 class="card-title pricing-card-title">@Model.SaleCount</h1>
                    <a href="@Url.Action("Index", "Sale")" class="w-100 btn btn-lg btn-outline-success">
                        @Localizer["Enter"]
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3 bg-warning text-white">
                    <h4 class="my-0 fw-normal">🏥 @Localizer["Retailers"]</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Localizer["TotalRetailers"]</li>
                    </ul>
                    <h1 class="card-title pricing-card-title">@Model.RetailCount</h1>
                    <a href="@Url.Action("Index", "Retail")" class="w-100 btn btn-lg btn-outline-warning">
                        @Localizer["Enter"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Next Row -->
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3 bg-primary text-white">
                    <h4 class="my-0 fw-normal">💊 @Localizer["Medicines"]</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Localizer["TotalMedicines"]</li>
                    </ul>
                    <h1 class="card-title pricing-card-title">@Model.RegisteredMed</h1>
                    <a href="@Url.Action("Index", "Medicine")" class="w-100 btn btn-lg btn-outline-primary">
                        @Localizer["Enter"]
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3 bg-light text-black">
                    <h4 class="my-0 fw-normal">🏭 @Localizer["Manufacturers"]</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Localizer["TotalManufacturers"]</li>
                    </ul>
                    <h1 class="card-title pricing-card-title">@Model.Company</h1>
                    <a href="@Url.Action("Index", "Company")" class="w-100 btn btn-lg btn-outline-dark text-black">
                        @Localizer["Enter"]
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3 bg-info text-white">
                    <h4 class="my-0 fw-normal">🧑‍💻 @Localizer["Users"]</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Localizer["TotalUsers"]</li>
                    </ul>
                    <h1 class="card-title pricing-card-title">@Model.UserCount</h1>
                    <a href="@Url.Action("Index", "UserManagement")" class="w-100 btn btn-lg btn-outline-info">
                        @Localizer["Enter"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
