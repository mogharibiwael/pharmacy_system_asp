@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@Localizer["Description"].Value">
    <meta name="author" content="@Localizer["Author"].Value">

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-briefcase-medical"></i>
                </div>
                <div class="sidebar-brand-text mx-3">@Localizer["PMS"].Value</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0" />

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                @Html.ActionLink("💊🔦 " + Localizer["Dashboard"].Value, "Home", "Home", null, new { @class = "nav-link" })
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                @Localizer["PharmaceuticalManagement"].Value
            </div>

            <!-- Nav Items -->
            <li class="nav-item">
                <a asp-controller="Sale" asp-action="Index"
                   class="nav-link collapsed">
                    <span>💵 @Localizer["Sales"].Value</span>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Stock" asp-action="Index"
                   class="nav-link collapsed">
                    <span>📦 @Localizer["Stocks"].Value</span>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Retail" asp-action="Index"
                   class="nav-link collapsed">
                    <span>🏥 @Localizer["Retailers"].Value</span>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Company" asp-action="Index"
                   class="nav-link collapsed">
                    <span>🏭 @Localizer["Company"].Value</span>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Medicine" asp-action="Index"
                   class="nav-link collapsed">
                    <span>💊 @Localizer["Medicines"].Value</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <div class="sidebar-heading">
                @Localizer["UserManagement"].Value
            </div>

            <li class="nav-item">
                <a asp-controller="UserManagement" asp-action="Index"
                   class="nav-link collapsed">
                    <span>👤 @Localizer["Users"].Value</span>
                </a>
            </li>

            <hr class="sidebar-divider" />
            <div class="sidebar-heading">
                @Localizer["Misc"].Value
            </div>

            <li class="nav-item">
                <a asp-controller="Home" asp-action="About"
                   class="nav-link collapsed">
                    <span>❓ @Localizer["About"].Value</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- User Info -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@Localizer["User"].Value</span>
                                <img class="img-profile rounded-circle"
                                     src="~/images/Dashboard/undraw_profile.svg">
                            </a>
                            <!-- User Dropdown -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Home">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>@Localizer["Logout"].Value
                                </a>
                            </div>
                        </li>

                        <!-- Language Switcher -->
                        <li class="nav-item">
                            <div class="text-center p-3">
                                <form asp-controller="Home" asp-action="SetLanguage" method="post">
                                    <select name="culture" onchange="this.form.submit()" class="form-control">
                                        <option value="en" selected="@((CultureInfo.CurrentUICulture.Name == "en") ? "selected" : null)">🇺🇸 @Localizer["English"].Value</option>
                                        <option value="ar" selected="@((CultureInfo.CurrentUICulture.Name == "ar") ? "selected" : null)">🇸🇦 @Localizer["Arabic"].Value</option>
                                    </select>
                                </form>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
</body>
</html>
